{{#if quizzingNow}}
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-3-offset">
      <img class="img-responsive" src={{currentQuestion}} alt="" />
      <label for="answer">Name the movie:</label>
      {{input class="form-control" value=answer id="answer"}}
    </div>
  </div>
</div>
<button class="btn btn-primary" {{action 'nextQuestion' results}}>Submit Answer</button>
{{else}}
<button class="btn btn-primary" {{action 'startQuiz' results}}>Start Movie Quiz</button>
{{/if}}

{{score.totalScore}}


{{#if areResultsShowing}}
  <h1>Answer Key</h1>
  {{#each results as |movies|}}
    <li><span class="thumbnail">img="{{movies.image}}"</span> {{movies.title}}</li>
  {{/each}}
{{/if}}
